{
    "collectionName": "posts",
    "info": {
      "singularName": "post",
      "pluralName": "posts",
      "displayName": "Post",
      "description": "All content items for Zi's site (product, cook, books, podcasts, etc.)"
    },
    "options": {
      "draftAndPublish": true
    },
    "attributes": {
      "title": {
        "type": "string",
        "required": true
      },
      "slug": {
        "type": "uid",
        "targetField": "title",
        "required": true,
        "unique": true
      },
      "excerpt": {
        "type": "text"
      },
      "content": {
        "type": "richtext",
        "required": true
      },
      "coverImage": {
        "type": "media",
        "multiple": false,
        "allowedTypes": ["images"]
      },
      "format": {
        "type": "enumeration",
        "enum": ["article", "video", "podcast"],
        "default": "article",
        "required": true
      },
      "youtubeUrl": {
        "type": "string",
        "required": false
      },
      "externalUrl": {
        "type": "string",
        "required": false
      },
      "publishedAt": {
        "type": "datetime"
      },
      "tags": {
        "type": "relation",
        "relation": "manyToMany",
        "target": "api::tag.tag",
        "inversedBy": "posts"
      }
    }
  }
  