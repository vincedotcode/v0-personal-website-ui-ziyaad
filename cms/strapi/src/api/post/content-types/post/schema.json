{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "format": {
      "type": "enumeration",
      "enum": [
        "article",
        "video",
        "podcast",
        "link"
      ]
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "youtubeUrl": {
      "type": "text"
    },
    "externalUrl": {
      "type": "text"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "readingTimeMinutes": {
      "type": "integer"
    },
    "durationSeconds": {
      "type": "integer"
    },
    "isFeatured": {
      "type": "boolean"
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "posts"
    }
  }
}
