{
    "collectionName": "tags",
    "info": {
      "singularName": "tag",
      "pluralName": "tags",
      "displayName": "Tag",
      "description": "Taxonomy for sections: product, cook, books, podcasts, etc."
    },
    "options": {
      "draftAndPublish": false
    },
    "attributes": {
      "name": {
        "type": "string",
        "required": true,
        "unique": true
      },
      "slug": {
        "type": "uid",
        "targetField": "name",
        "required": true,
        "unique": true
      },
      "description": {
        "type": "text"
      },
      "posts": {
        "type": "relation",
        "relation": "manyToMany",
        "target": "api::post.post",
        "mappedBy": "tags"
      }
    }
  }
  